<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="cc.zerovoid.databinding.bean.UserBean"/>

        <import type="java.util.ArrayList"/>

        <import type="java.util.List"/>

        <import type="java.util.HashMap"/>

        <import type="cc.zerovoid.databinding.handler.MyEventHandler"/>

        <variable
            name="myTask"
            type="cc.zerovoid.databinding.handler.MyTask"/>

        <variable
            name="myPresenter"
            type="cc.zerovoid.databinding.handler.MyPresenter"/>

        <variable
            name="myHandler"
            type="MyEventHandler"/>

        <variable
            name="user"
            type="UserBean"/>

        <variable
            name="myStr"
            type="String"/>

        <variable
            name="myList"
            type="ArrayList&lt;String>"/>

        <variable
            name="myListMap"
            type="ArrayList&lt;HashMap&lt;String, String>>"/>

        <variable
            name="myMap"
            type="HashMap&lt;String, String>"/>

        <variable
            name="listPos"
            type="int"/>

        <variable
            name="mapKey"
            type="String"/>

        <variable
            name="arrayNum"
            type="int"/>


    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名字"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.name}"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="年龄"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.age}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{myStr}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{myList[0]}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{myList[listPos]}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{(myListMap[0])[mapKey]}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{myMap["myMapKey"]}'/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{`myMap[顿myMapKey顿]：`+myMap[`myMapKey`]}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{`myMap[mapKey]：`+myMap[mapKey]}'/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{myHandler::onClickMe}"
                android:text="事件处理：Method References"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() -> myPresenter.onPresenterSaveClick(myTask)}"
                android:text="事件处理：Listener Bindings"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="请"
                android:text="@={user.name}"/>

        </LinearLayout>

    </ScrollView>
</layout>